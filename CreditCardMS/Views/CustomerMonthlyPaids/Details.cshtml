@model CreditCardMS.Models.CustomerMonthlyPaid

@{
    ViewBag.Title = "Details";
}

<center>   <h4>Details Information</h4></center>

<hr />
<div class="row">
    <div class="col-lg-12">
        <table class="table table-bordered">
            <tr>
                <td>Customer Name</td>
                <td>@Model.Customer.Name</td>
            </tr>
            <tr>
                <td>Card No</td>
                <td>@Model.Customer.CardNumber</td>
            </tr>
            <tr>
                <td>Email</td>
                <td>@Model.Customer.Email</td>
            </tr>
            <tr>
                <td>Applying Month</td>
                <td>@Model.MonthTbl.Name</td>
            </tr>
            <tr>
                <td>Applying Money</td>
                <td>@Model.ApplyingMoney</td>
            </tr>
            <tr>
                <td>Witdraw Money</td>
                <td>@Model.ConsumeMoney</td>
            </tr>
            <tr>
                <td>Paid Money</td>
                <td>@Model.PaidMoney</td>
            </tr>
            <tr>
                <td>Service Charge</td>
                <td>@Model.Customer.CardType1.ServiceCharge</td>
            </tr>
            <tr>
                <td>Cash Back</td>
                <td>@Model.CashBack</td>
            </tr>
            <tr>
                <td>Fine</td>
                <td>@Model.Fine</td>
            </tr>
            <tr>
                <td>Bill</td>
                @{
                    var TotalBill = ((Model.TotalBill) + ((Model.TotalBill * Model.ServiceCharge) / 100)) - Model.CashBack;
                    <td>@TotalBill</td>
                }
            </tr>
            <tr>
                <td>Paid Status</td>
                @if (Model.PaidStatus == "Running")
                {
                    <td><h2>Running</h2></td>
                }
                else
                {
                    <td><h2>Paid</h2></td>
                }
            </tr>


        </table>
    </div>

</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.MonthlyPaidId }) |
    @Html.ActionLink("Back to List", "Index")
</p>
