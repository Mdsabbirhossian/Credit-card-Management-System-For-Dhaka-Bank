@model CreditCardMS.Models.CustomerConsumingMoney

@{
    ViewBag.Title = "Create";
}
<center>
    <h2>Witdraw Application</h2>
</center>
<div class="alert-danger">
    @ViewBag.error
</div>

<div class="form-horizontal">
    <h4>Customer Consuming Money</h4>
    <hr />
    <form action="" method="post">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group hide">
            <div class="col-md-10">
                <input type="text" name="CustomerId" value="@Session["UserId"].ToString()" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <div class="control-label col-md-4">
                Name
            </div>

            <div class="col-md-8">
                <input type="text" value="@Session["UserName"].ToString()" readonly class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-4">
                Month Name
            </div>

            <div class="col-md-8">
                @Html.DropDownList("Month", null, "Select Month", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Month, "", new { @class = "text-danger" })
            </div>
        </div>



        <div class="form-group">
            <div class="control-label col-md-4">
                Date
            </div>
            <div class="col-md-8">
                <input type="date" name="ConsumeDate" class="form-control" required />
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-4">
                Witdraw Amount
            </div>

            <div class="col-md-8">
                @Html.EditorFor(model => model.ConsumeMoney, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ConsumeMoney, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group hidden">
            <div class="control-label col-md-4">
                Cash Back(%)
            </div>
            <div class="col-md-8">
                <input type="number" name="CashBackMoney" class="form-control" required />
            </div>
        </div>


        <div class="form-group hidden">
            <div class="control-label col-md-4">
                Total Amount
            </div>
            <div class="col-md-8">
                @Html.EditorFor(model => model.TotalConsumeMoney, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TotalConsumeMoney, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Submit" class="btn btn-lg btn-success" style="margin-left:300px" />
            </div>
        </div>
    </form>
</div>


<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
